{
  "name": "@trackingplan/react-native",
  "version": "0.4.1",
  "trackingplan": {
    "androidVersion": "2.1.0",
    "iosVersion": "1.6.1"
  },
  "description": "Trackingplan for React Native SDK",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "plugin",
    "app.plugin.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace @trackingplan/react-native-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "build:library": "bob build",
    "build:plugin": "del-cli plugin/build && tsc --build plugin",
    "prepare": "yarn build:library && yarn build:plugin",
    "release": "release-it",
    "clean": "yarn clean:library && yarn clean:plugin",
    "clean:library": "del-cli android/build lib",
    "clean:plugin": "del-cli plugin/build plugin/.expo",
    "clean:examples": "yarn clean:android && yarn clean:ios && del-cli expo_example/android expo_example/ios",
    "clean:yarn": "del-cli .yarn/cache .yarn/install-state.gz node_modules example/node_modules expo_example/node_modules"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "expo",
    "expo-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trackingplan/trackingplan-react-native.git"
  },
  "author": "Trackingplan <jose@trackingplan.com> (https://github.com/trackingplan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trackingplan/trackingplan-react-native/issues"
  },
  "homepage": "https://github.com/trackingplan/trackingplan-react-native#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "^20.0.1",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@tsconfig/node-lts": "^22.0.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.0.0",
    "@types/react": "~19.0.10",
    "commitlint": "^19.6.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "expo": "^53.0.22",
    "jest": "^30.1.3",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.4",
    "turbo": "^1.10.7",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "expo": ">=53.0.0",
    "react": "*",
    "react-native": "*"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    }
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.9.2",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "TrackingplanReactNativeSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.trackingplanreactnative"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.50.2"
  }
}
